<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_self"
    android:gravity="center_horizontal"
    android:minWidth="240dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/affirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:text="提示"
        android:textColor="#333"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="17dp"
        android:background="@color/color_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/affirm_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_selected"
            android:gravity="center"
            android:padding="12dp"
            android:text="取消"
            android:textColor="@color/text_shallow_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/color_divider" />

        <TextView
            android:id="@+id/affirm_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_selected"
            android:gravity="center"
            android:padding="12dp"
            android:text="确认"
            android:textColor="@color/newcolor"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">
    <include layout="@layout/activity_top"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="#fff"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#333"
            android:text="是否接收通知"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_notice_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plan_on"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"/>
        <ImageView
            android:id="@+id/iv_notice_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plan_off"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_clear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="#fff"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="#333"
            android:text="清除图片缓存"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:text=""
            android:drawableRight="@drawable/mine_yjt"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="14dp"/>
    </RelativeLayout>
</LinearLayout>

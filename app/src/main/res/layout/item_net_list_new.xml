<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="net名字"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_net_name"
                    android:textColor="#333"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_alignRight="@+id/iv_net_icon"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="net名字11111"
                    android:textSize="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_net_url"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignRight="@+id/iv_net_icon"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="12dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/white_list_check_n"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="禁用"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_select_flag"
                    android:textColor="#999999"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:background="@drawable/shape_gray_ov"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="禁用"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_select_flag_om"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:background="@drawable/shape_gray_lv"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_numb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="#666"
                android:textSize="12dp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:textColor="#666"
                android:textSize="12dp"
                android:text="2018-09-21 12:21"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
    </LinearLayout>
</LinearLayout>
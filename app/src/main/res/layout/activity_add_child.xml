<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzkc.parent.activity.AddChildActivity">
    <include layout="@layout/activity_top"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/parents_add_zxing"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="点击下面按钮"
            android:layout_marginTop="28dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:text="扫一扫孩子端二维码，关联孩子设备"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_two_bg"
            android:text="关联孩子设备"
            android:padding="16dp"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_context_child" />
        <TextView
            android:layout_width="wrap_content"
            android:text="或用孩子端扫描生成的二维码"
            android:layout_marginTop="28dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="关联孩子设备"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="点击生成二维码"
            android:padding="12dp"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:id="@+id/tv_creat_zxing" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#66000000"
            android:text="如果孩子手机没安装孩子端，请点击"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="下载"
            android:padding="6dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:id="@+id/tv_load_zxing"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

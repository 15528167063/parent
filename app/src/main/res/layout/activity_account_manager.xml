<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzkc.parent.activity.ChildManagerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <include layout="@layout/activity_top_new"></include>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:id="@+id/ll_account_message"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:textSize="14dp"
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:text="账号ID" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话号码"
                    android:textSize="13dp"
                    android:id="@+id/tv_account"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:id="@+id/ll_head"
            android:layout_height="54dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:textSize="14dp"
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="头像" />
                <ImageView
                    android:id="@+id/iv_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_yjt"
                    android:paddingRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@+id/iv_heads"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/mine_head_02"
                    android:layout_toLeftOf="@id/iv_jt"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:id="@+id/ll_change_name"
            android:layout_height="54dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:textSize="14dp"
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:text="昵称" />
                <ImageView
                    android:id="@+id/iv_jt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_yjt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13dp"
                    android:id="@+id/tv_name"
                    android:layout_toLeftOf="@+id/iv_jt1"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:id="@+id/ll_change_password"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:textSize="14dp"
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:text="重置密码" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mine_yjt" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/shape_lin_yy"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:text="退出登陆"
            android:textColor="#fff"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_lv"
            android:layout_height="44dp"
            android:id="@+id/bt_comfirm" />
    </LinearLayout>
</RelativeLayout>

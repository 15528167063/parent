<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
  >
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ececec"/>

    <RelativeLayout
        android:id="@+id/rl_child_yjgk"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:text="是否允许孩子安装应用程序"
            android:id="@+id/textView5" />

        <ImageView
            android:id="@+id/iv_yjgk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onff"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/lin_hasdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_uninstall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#666"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="卸载孩子端应用" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_install"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:background="#3a6dbe"
                android:text="卸载应用"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerInParent="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fl_kongbai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:src="@drawable/no_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

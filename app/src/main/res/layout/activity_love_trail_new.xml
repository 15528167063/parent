<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.hzkc.parent.activity.AddChildActivity">
    <include layout="@layout/activity_top_new"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="148dp"
                android:background="@drawable/shape_gray_corn">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp">
                    <RelativeLayout
                        android:id="@+id/re"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="43dp"
                            android:id="@+id/iv_child_icon"
                            android:src="@drawable/mine_head__01"
                            android:layout_centerInParent="true"
                            android:layout_height="43dp" />
                        <ImageView
                            android:layout_width="48dp"
                            android:src="@drawable/child_wk"
                            android:layout_centerInParent="true"
                            android:layout_height="48dp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="哈哈哈小朋友"
                        android:textColor="#333"
                        android:textSize="14dp"
                        android:id="@+id/tv_love_child_name"
                        android:layout_toRightOf="@+id/re"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_ty"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="45dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="足迹"
                            android:textColor="#666"
                            android:textSize="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#333"
                            android:textSize="20dp"
                            android:id="@+id/tv_gj_num"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/tv_love_child_name"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#ddd"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_time"
                        android:text="最后一站"
                        android:textColor="#666666"
                        android:textSize="12dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="match_parent"
                        android:drawableBottom="@drawable/gj_wz"
                        android:drawablePadding="8dp"
                        android:paddingBottom="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_last_wz"
                        android:text="未获取到位置信息"
                        android:textColor="#333"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="14dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/lv_love_trail"
                android:divider="@null"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16dp"
                android:scrollbars="none"
                android:listSelector="@color/transparent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_download"
            android:gravity="center"
            android:clickable="true"
            android:background="#66000000"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:text="数据正在加载中，请稍候"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

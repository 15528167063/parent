<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_height="0dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linear_comment"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="bottom"
                android:src="@drawable/timeline_icon_comment"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:id="@+id/text_comment"
                android:text="回复"
                android:paddingLeft="8dp"
                android:textSize="14dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_favour"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:layout_gravity="bottom"
                    android:src="@drawable/timeline_icon_unlike"
                    android:layout_width="16dp"
                    android:id="@+id/iv_favour"
                    android:layout_height="16dp" />
                <ImageView
                    android:layout_gravity="bottom"
                    android:src="@drawable/timeline_icon_like"
                    android:layout_width="16dp"
                    android:visibility="invisible"
                    android:id="@+id/iv_favoured"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/text_favour"
                android:text="0"
                android:paddingLeft="8dp"
                android:textColor="@color/gray"
                android:layout_gravity="bottom"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="105dp">
        <LinearLayout
            android:layout_width="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="00:21"
                android:textColor="#333"
                android:textSize="14dp"
                android:id="@+id/tv_request_time"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="20分钟"
                android:textColor="#999"
                android:textSize="10dp"
                android:drawableLeft="@drawable/gj_time"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/tv_stop_time"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="16dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gj_zxd"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_1"
                    android:background="#ddd"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rv_2"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_height="match_parent">
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ddd"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gj_hd"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:text="都市天府大道书成都市天府大道书都中心1号成都市天府大道书都中心都市天府大道书1号成都市天府大道书都中心1号成都市天府大道书都中心1号楼1002开啦啦啦啦"
                android:textSize="13dp"
                android:textColor="#333"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="5dp"
                android:paddingLeft="20dp"
                android:maxLines="3"
                android:background="@drawable/gj_kk"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:id="@+id/tv_address"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
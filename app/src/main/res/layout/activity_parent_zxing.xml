<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzkc.parent.activity.ParentZxingActivity">
    <include layout="@layout/activity_top_new"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/add_bgs">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape__bg"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/lin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="使用孩子端"
                    android:textSize="14dp"
                    android:textColor="#666"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="扫描"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/newcolor"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="下面二维码"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#666"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/erm"
                android:layout_width="match_parent"
                android:text="下面二维码"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:textColor="#666"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/lin_text"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:src="@drawable/add_wk"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/erm"
                android:layout_centerInParent="true" />
            <ImageView
                android:id="@+id/iv_parent_zxing"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/erm"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="如果孩子手机没有安装孩子端，扫描下"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/lin_textw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="面二维码"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_below="@+id/lin_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="下载"
                android:textSize="16dp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_below="@+id/lin_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="并安装"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_below="@+id/lin_text"
                android:layout_height="wrap_content" />
        </LinearLayout>





        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/add_dk"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:src="@drawable/add_xz"
                android:layout_centerInParent="true" />
            <ImageView
                android:id="@+id/iv_down_zxing"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="下载"
            android:textSize="20dp"
            android:padding="6dp"
            android:id="@+id/tv_download_child"
            android:visibility="gone"
            android:textColor="@color/newcolor"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

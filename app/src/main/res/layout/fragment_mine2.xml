<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/rl_top"
            android:background="@color/blue">
            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人中心"
                android:textColor="#fff"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:layout_marginRight="7dp">
                <ImageView
                    android:id="@+id/lin_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mine_message_1"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/tv_mess_numb"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:text="99"
                    android:paddingBottom="2dp"
                    android:paddingTop="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_red_ov"
                    android:textSize="9dp"
                  />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/mine_setting_1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-5dp"
            android:background="#f7f7f7">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@drawable/mine_bg_01"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape__bg"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:id="@+id/iv_mine_child_icons"
                        android:layout_width="45dp"
                        android:src="@drawable/mine_head_02"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_child_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="李小龙"
                            android:textColor="#333"
                            android:textSize="14dp"
                            android:layout_gravity="center" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/tv_vip"
                                android:text="您还未开通会员"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#999999"
                                android:textSize="12dp"
                                android:drawableRight="@drawable/sy_jj"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/view2" />
                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_width="25dp"
                        android:src="@drawable/sy_vip_off"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:id="@+id/tv_changesf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="切换身份"
                        android:textColor="@color/newcolor"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:drawableRight="@drawable/mine_yjt"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="44dp"
            android:visibility="gone"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f7f7f7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="18dp"
                    android:id="@+id/iv_vip_icon"
                    android:src="@drawable/mine_message"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="我的消息"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/mine_yjt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7"/>
        <LinearLayout
            android:id="@+id/lin_zhgl"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_zhgl"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="账号管理"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>

        <LinearLayout
            android:id="@+id/lin_hzgl"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_cm"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="孩子管理"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7"/>

        <LinearLayout
            android:id="@+id/lin_vip"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_vip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="VIP充值(公测版)"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>

        <LinearLayout
            android:id="@+id/lin_vip_zd"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_zd"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="充值账单"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7"/>

        <LinearLayout
            android:id="@+id/lin_wytg"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/mine_zhgl"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:id="@+id/tv_wytg"
                android:layout_width="wrap_content"
                android:text="我要推广"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="10dp"
                android:id="@+id/tv_erweima"
                android:gravity="center_vertical"
                android:text="推广二维码"
                android:layout_marginRight="10dp"
                android:padding="3dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>

        <LinearLayout
            android:id="@+id/lin_share"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_share"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="分享有礼"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_share"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:background="@drawable/btn_red"
                android:padding="3dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <LinearLayout
            android:id="@+id/lin_yhfk"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_yhfk"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="用户反馈"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>

        <LinearLayout
            android:id="@+id/lin_gywm"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="18dp"
                android:src="@drawable/min_us"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="关于我们"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:textColor="#333"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/mine_yjt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
    </LinearLayout>
</ScrollView>
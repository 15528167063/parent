<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context="com.hzkc.parent.activity.AddNetActivity">
    <include layout="@layout/activity_top_new" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <EditText
            android:id="@+id/et_net_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="请输入网址关键字"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="#c1c6c6"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/contact_seach1"
            android:drawablePadding="7dp"
            android:background="@drawable/shape_edit_bg"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="左滑可删除禁用网站"
        android:drawableLeft="@drawable/appshare"
        android:drawablePadding="7dp"
        android:textColor="#666666"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="22dp"
        android:background="#f0faf4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_net_list"
            android:layout_width="match_parent"
            android:listSelector="@android:color/transparent"
            android:divider="#f6f6f6"
            android:dividerHeight="4dp"
            android:layout_height="match_parent">
        </ListView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/fl_kongbai"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/no_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

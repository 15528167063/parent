<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_gray_corn"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#252525"
                android:text="标签：放松时刻"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="时间：18:00 - 22:00"
                android:textSize="14dp"
                android:layout_gravity="center_vertical" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_plan_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="周期："
                    android:layout_centerVertical="true"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_8"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="每天"
                    android:background="@drawable/shape_gray_corns"
                    android:layout_toRightOf="@+id/tv_plan_day"
                    android:padding="4dp"
                    android:textSize="11dp" />
                <HorizontalScrollView
                    android:id="@+id/lin_scro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_toRightOf="@+id/tv_plan_day">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="周一"
                            android:visibility="gone"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:text="周二"

                            android:layout_marginLeft="5dp"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:visibility="gone"
                            android:text="周三"
                            android:layout_marginLeft="5dp"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:layout_marginLeft="5dp"
                            android:text="周四"
                            android:visibility="gone"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="周五"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:visibility="gone"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="周六"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:visibility="gone"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_gray_corns"
                            android:padding="3dp"
                            android:text="周日"
                            android:visibility="gone"
                            android:textSize="11dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iv_plan_falg"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:src="@drawable/plan_off"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_cb"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:visibility="gone">
        <CheckBox
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:clickable="false"
            android:focusable="false"
            android:button="@null"
            android:id="@+id/item_cb"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_checked"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical" />
    </RelativeLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@null"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="net名字"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_net_name"
                        android:textColor="#333"
                        android:layout_alignRight="@+id/iv_net_icon"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="net名字11111"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_net_url"
                        android:textColor="#666666"
                        android:layout_alignRight="@+id/iv_net_icon"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/white_list_check_n"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="禁用"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:id="@+id/iv_select_flag"
                        android:textColor="#999999"
                        android:layout_height="wrap_content"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/newcolor"
        android:padding="15dp"
        android:src="@drawable/net_det" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
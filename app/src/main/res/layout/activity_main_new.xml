<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#f6f6f6"
            android:layout_height="match_parent">
            <com.hzkc.parent.view.NoScrollViewPager
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:id="@+id/vp_main"
                android:layout_height="0dp">
            </com.hzkc.parent.view.NoScrollViewPager>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/soye_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rg_main"
                        android:background="#fff"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_tab1_internet"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@null"
                            android:button="@null"
                            android:textSize="12dp"
                            android:textColor="@drawable/selector_tab_text_color"
                            android:drawableTop="@drawable/selector_tab1_new"
                            android:text="资讯" />

                        <RadioButton
                            android:id="@+id/rb_tab2_find"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@null"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:textColor="#666666"
                            android:drawableTop="@drawable/selector_tab2_find"
                            android:text="发现" />
                        <RadioButton
                            android:id="@+id/rb_tab3_news"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:checked="true"
                            android:button="@null"
                            android:gravity="center"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                        <RadioButton
                            android:id="@+id/rb_tab3_mine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@null"
                            android:textSize="12dp"
                            android:textColor="@drawable/selector_tab_text_color"
                            android:drawableTop="@drawable/selector_tab3_new"
                            android:text="我的" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#88000000"
            android:id="@+id/ll_guide"
            android:clickable="true"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="74dp"
                android:layout_marginRight="34dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/internet_guide_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="76dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/internet_guide_2"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="66dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/internet_guide_3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/internet_guide_4"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:id="@+id/iv_guide"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_middle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sy_hh_on"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:id="@+id/re_guide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/guide_001">
            <ImageView
                android:id="@+id/iv_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/guide_000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_guide2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/guide_002">
            <ImageView
                android:id="@+id/iv_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/guide_000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_guide3"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/guide_003">
            <View
                android:id="@+id/iv_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_view"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/guide_000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_guide4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/guide_004">
            <View
                android:id="@+id/iv_view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_view1"
                android:layout_marginTop="200dp"
                android:src="@drawable/guide_000"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:background="#111">
        <include layout="@layout/layout_menu" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
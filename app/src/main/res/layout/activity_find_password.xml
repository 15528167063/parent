<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/activity_top_new"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="34dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:background="@drawable/shape_white"
            android:maxLength="12"
            android:maxLines="1"
            android:layout_height="44dp"
            android:hint="请输入您的手机号码"
            android:id="@+id/et_phone_num"
            android:textSize="14dp"
            android:textColor="#333333"
            android:inputType="phone"
            android:padding="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_white"
            android:layout_gravity="center_vertical"
            android:layout_height="44dp">
            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:background="@drawable/shape_white"
                android:maxLength="6"
                android:maxLines="1"
                android:id="@+id/et_yzm"
                android:layout_height="44dp"
                android:hint="输入验证码"
                android:textSize="14dp"
                android:textColor="#333333"
                android:inputType="number"
                android:padding="12dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_white_right"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="获取验证码"
                    android:textSize="14dp"
                    android:padding="6dp"
                    android:id="@+id/bt_get_yzm"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/newcolor"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:background="@drawable/shape_white"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_height="44dp"
            android:hint="请输入新密码(至少6位)"
            android:id="@+id/et_password"
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginTop="18dp"
            android:inputType="textPassword"
            android:padding="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:background="@drawable/shape_white"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_height="44dp"
            android:hint="请确认新密码"
            android:textSize="14dp"
            android:layout_marginTop="18dp"
            android:textColor="#333333"
            android:id="@+id/et_confirm_password"
            android:inputType="textPassword"
            android:padding="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"/>
        <TextView
            android:layout_width="match_parent"
            android:text="提交"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/btn_lv"
            android:layout_height="44dp"
            android:id="@+id/bt_regist_submit" />
    </LinearLayout>
</LinearLayout>
